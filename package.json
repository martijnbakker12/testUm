{
  "name": "vpn-control-3",
  "private": true,
  "scripts": {
    "start": "meteor run",
    "test": "meteor test --once --driver-package meteortesting:mocha",
    "test-app": "TEST_WATCH=1 meteor test --full-app --driver-package meteortesting:mocha",
    "visualize": "meteor --production --extra-packages bundle-visualizer",
    "create-docker-env": "cat settings/settings.json | sed s/127.0.0.1/host.docker.internal/g | sed s/\\t//g | awk 1 ORS='' | awk '{print \"METEOR_SETTINGS=\" $0;}' > .env && echo NODE_EXTRA_CA_CERTS=/opt/meteor/dist/bundle/programs/server/assets/app/Fortinet_CA_SSL.pem >> .env",
    "build": "docker build -t axians/vpn-control .",
    "dockerize": "npm run-script create-docker-env && npm run-script build"
  },
  "dependencies": {
    "@babel/runtime": "^7.1.2",
    "bcrypt": "^3.0.0",
    "body-parser": "^1.18.3",
    "connected-react-router": "^4.3.0",
    "cookies": "^0.7.1",
    "express": "^4.16.3",
    "griddle-react": "^1.13.1",
    "history": "^4.7.2",
    "jsencrypt": "^3.0.0-rc.1",
    "ldapjs": "^1.0.2",
    "meteor-node-stubs": "^0.4.1",
    "react": "^16.4.1",
    "react-accessible-accordion": "^2.4.4",
    "react-bootstrap": "^0.32.1",
    "react-dom": "^16.4.1",
    "react-fontawesome": "^1.6.1",
    "react-redux": "^5.0.7",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-router-redux": "^5.0.0-alpha.9",
    "redux": "^4.0.0",
    "underscore": "^1.9.1"
  },
  "meteor": {
    "mainModule": {
      "client": "client/main.js",
      "server": "server/main.js"
    },
    "testModule": "tests/main.js"
  }
}
